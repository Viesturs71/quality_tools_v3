# Copy this file to .env and fill in your actual values

# Django Secret Key - Generate a new one for production
DJANGO_SECRET_KEY=your-secret-key-here

# Database Configuration
# For local development (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/quality_tools_db

# For Heroku PostgreSQL (automatically set by Heroku add-on)
# DATABASE_URL will be provided by Heroku in format:
# postgres://username:password@hostname:port/database_name

# Alternative local PostgreSQL formats:
# DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/quality_tools_v3
# DATABASE_URL=postgres://postgres:yourpassword@localhost:5432/quality_tools_v3

# SQLite fallback (only for initial development/testing)
# DATABASE_URL=sqlite:///db.sqlite3

# Debug Mode (True for development, False for production)
DEBUG=True

# Allowed Hosts (comma-separated)
# For Heroku, add your app domain: yourapp.herokuapp.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# PostgreSQL specific settings (optional)
# DB_NAME=quality_tools_v3
# DB_USER=postgres
# DB_PASSWORD=yourpassword
# DB_HOST=localhost
# DB_PORT=5432

# Heroku specific settings
# These will be automatically set by Heroku
# PORT=8000
# DYNO=web.1

# Security settings for production
# SECURE_SSL_REDIRECT=True
# SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# SECURE_BROWSER_XSS_FILTER=True
# X_FRAME_OPTIONS=DENY

# Static files for production
# STATICFILES_STORAGE=whitenoise.storage.CompressedManifestStaticFilesStorage

# File uploads (for production, use cloud storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Cache settings (optional)
# REDIS_URL=redis://localhost:6379/0

# Celery settings (optional)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
